{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 生成活动文件",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                /* start Ruby */
                "-I/usr/include/x86_64-linux-gnu/ruby-3.2.0",
                "-I/usr/include/ruby-3.2.0",
                "-lruby-3.2",
                "-lm",
                "-lpthread"
                /* end Ruby */
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}